# See https://help.github.com/articles/ignoring-files/ for more about ignoring files.

# ===========================================
# Ruby on Rails (api folder)
# ===========================================

# Ignore bundler config
api/.bundle
api/vendor/bundle

# Ignore environment files
api/.env
api/.env.*
!api/.env*.erb

# Ignore Rails credentials and keys
api/config/master.key
api/config/credentials/*.key

# Ignore all logfiles and tempfiles
api/log/*
!api/log/.keep
api/tmp/*
!api/tmp/.keep
api/tmp/pids/*
!api/tmp/pids/.keep
api/tmp/cache/*
!api/tmp/cache/.keep

# Ignore storage (uploaded files and SQLite databases)
api/storage/*
!api/storage/.keep
api/tmp/storage/*
!api/tmp/storage/.keep

# Ignore database files
api/*.sqlite3
api/*.sqlite3-journal
api/*.sqlite3-*

# Ignore Rails generated files
api/public/assets
api/public/packs
api/public/packs-test
api/node_modules
api/yarn-error.log
api/yarn.lock

# ===========================================
# React/Node.js (frontend folder)
# ===========================================

# Dependencies
frontend/node_modules
frontend/.pnp
frontend/.pnp.js

# Testing
frontend/coverage
frontend/.nyc_output

# Production build
frontend/build
frontend/dist

# Environment files
frontend/.env
frontend/.env.local
frontend/.env.development.local
frontend/.env.test.local
frontend/.env.production.local

# Logs
frontend/npm-debug.log*
frontend/yarn-debug.log*
frontend/yarn-error.log*
frontend/lerna-debug.log*
frontend/.pnpm-debug.log*

# Runtime data
frontend/pids
frontend/*.pid
frontend/*.seed
frontend/*.pid.lock

# Optional npm cache directory
frontend/.npm

# Optional eslint cache
frontend/.eslintcache

